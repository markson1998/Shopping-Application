<h1> <%= title %>  </h1>

<div class="row">
   
<div class=" col-sm-1 col-md-4  mt-4 "  >


    <div class="card" style="width: 18rem; ">
        
        <img src="   <%= productImage %>  " class="card-img-top " class="img-responsive" alt="<%= productImage %>">
            <div class="card-body">
                <h5 class="card-title"><%= title %></h5>
                <p class="description"><%= description %></p>
                <div class="clearfix">
                    <div class="price float-left">    <%= price %>  </div>

                </div>
            </div>
        </div>

    </div>
    <div class="col-sm-1 col-md-4  mt-4">
        <h5 class="card-title"><%= title %> Reviews </h5>
        <% for(var i=0; i<reviews.length; i++) {%>
        <div class="card" style="width: 50rem;">

            
             <%= reviews[i].userId %>  :  <%= reviews[i].reviewDescription %> 

        </div>
        <br>
        <% } %>


        </div>
    
       
</div>    

