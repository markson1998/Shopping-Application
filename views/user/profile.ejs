
<h1> Welcome Back   <%= name %>   </h1>
<hr>
<h2>My Orders history: </h2>

<% if(orders){ %>
    <div class="row">
        <div class="col-sm-12 col-md-12  col-md-offset-3 col-sm-offset-3">
            <ul class="list-group-item">
                <% for(var i=0; i<orders.length; i++) {%>
                    <li class="list-group-item">
                    <strong>  
                    <p>
                        <script> document.write(new Date().toLocaleDateString()); </script>
                        by  
                    </p>
                         
                    </strong>
                    <hr>
                     <strong>  <div class="text-danger"> <%= orders[i].name %></div>  </strong>
                       <hr>
                      
                       <div class="text-info">
                        <strong >   <%= orders[i].card.totalQty %> Products : </strong>
                               <% for(var j=0; j<orders[i].items.length; j++) {%>
                            <%=  orders[i].items[j].item.title %>     <strong >€<%=  orders[i].items[j].item.price %>  </strong> X <%=  orders[i].items[j].qty %>  &nbsp;&nbsp;
                        <% } %>     
 
                <strong >   <span class="float-right"> € <%= orders[i].card.totalPrice %>    </span> </strong>
                          </div>
                </li>
				<% } %>

            </ul>
        </div>
       
    </div>
    
     

    <hr>


    <% } else{ %>  

<div class="row">
    <div class="col-sm-6 col-md-6  col-md-offset-3 col-sm-offset-3">
       <h2> Nothing here </h2>
    </div>
</div>   


<% } %>